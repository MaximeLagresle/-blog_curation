<div class="cards">
  <% @my_posts.each do |post| %>
    <div class="card">
      <%= link_to post.url, target: :_blank do %>
        <div class="card-img">
          <%= image_tag(post.image, :class => "img_cover") %>
        </div>
        <div class="card-details">
          <div class="card-published">
            <div class="time-publication">
              <i> Published <%= time_ago_in_words(post.published)%> ago.</i>
            </div>
            <div>
              <%= cl_image_tag(post.blog.photo, :radius=>50, :class => "img_logo", :quality=>"auto:best") %>
            </div>
          </div>
          <div class="card-title"> <h3><%= post.title %></h3> </div>
          <div class="card-description">
            <p><%= truncate(simple_format(post.description), length: 200, separator: ' ') %></p>
          </div>
          <!-- <div class="card-footer">
          </div> -->
        </div>
      <% end %>
    </div>
  <% end %>
</div>
