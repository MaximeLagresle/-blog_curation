    </div>


    <!-- cards grid -->
    <div class="cards">
      <% @all_posts.each do |post| %>
        <% link_to post.title, post.url, :target => "_blank" %>
          <div class="card">
            <div class="card-img" style="background-image: url('https://unsplash.it/500/400?random')";></div>
            <div class="card-details">
              <div class="card-title"> <%= post.title %> </div>
              <div class="card-description"><%= post.description %></div>
            </div>
          </div>
      <% end %>
    </div>
  </div>


  <!-- sidebar https://bootstrapious.com/p/bootstrap-sidebar -->
  <nav id="sidebar">
    <div class="sidebar-header">
      <%= image_tag "https://kitt.lewagon.com/placeholder/users/arthur-littm", class: "avatar-large", alt: "avatar-large" %>
    </div>

    <div class="blogs-list">
      <p>BLOGS FOLLOWED</p>
      <% @all_blogs.each do |blog| %>
        <div class="blog-name">
          <%= blog.name %>
        </div>
      <% end %>
    </div>
  </nav>
</div>

