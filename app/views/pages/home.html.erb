<div class="wrapper">
  <div class="main">

    <!-- navbar -->
    <div class="navbar navbar-expand-sm navbar-light navbar-blog">
      <!-- Logo -->
      <%= link_to root_path, class: "navbar-wagon-brand" do %>
        <%= image_tag "logo.svg", height: 40 %>
      <% end %>



