    <div class="blogs-list">

      <%= render "shared/blogs_list" %>

    </div>

    <button type="button" class="btn btn-flat" data-toggle="modal" data-target=".bd-blogs-modal-xl"><i class="fas fa-lightbulb"></i> More Blogs</button>

    <div class='login-bottom'>
      <% if user_signed_in? %>
        <button id="sweet-alert"><i class="fas fa-power-off toggle"></i></button>
        <%= link_to '', destroy_user_session_path, method: :delete, id: "logout-user", class: "hidden" %>
