<div class="wrapper">
    <div class="main">

      <!-- navbar -->
      <div class="navbar navbar-expand-sm navbar-light navbar-blog">
        <!-- Logo -->
        <div class="logo">
          <%= link_to root_path, class: "navbar-wagon-brand" do %>
            <%= image_tag "logo.svg", height: 40 %>
          <% end %>
        </div>

        <!-- <div class="tagline-search"> -->
        <!-- Search Bar  -->
        <div class="search-bar">
          <%= simple_form_for :search, url: root_path, method: :get do |f| %>
            <div class="search-form-control form-group">
              <input class="form-control string required" type="text" name="search[query]" id="search_query" />
              <button name="button" type="submit" class="btn btn-flat">
                <i class="fas fa-search"></i> Search
              </button>
            </div>
          <% end %>
        </div>

        <!-- tagline -->
        <!-- <div class="tagline">
          <h5>A moment of calm in the noisy world of growth and tech.</h5>
        </div> -->

        <!-- </div> -->

        <button class="navbar-toggler" type="button" id="sidebarCollapse" data-toggle="collapse">
            <span class="navbar-toggler-icon"></span>
        </button>

      </div>

      <!-- cards grid -->
      <div class="posts-feed">

        <%= render "pages/posts_feed" %>

      </div>
    </div>

  <!-- sidebar https://bootstrapious.com/p/bootstrap-sidebar -->
